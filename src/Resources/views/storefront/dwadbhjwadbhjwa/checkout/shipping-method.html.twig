{% sw_extends '@Storefront/storefront/page/checkout/shipping-method.html.twig' %}

{% block page_checkout_shipping_method %}
    <!-- DEBUG: ShipperHQ template loaded -->
    {{ dump('ShipperHQ template loaded') }}
    <div class="card checkout-card">
        <div class="card-body">
            <div class="card-title">
                Shipping method
            </div>
            
            <form id="changeShippingForm" name="changeShippingForm" action="/checkout/configure" data-form-auto-submit="true" data-form-auto-submit-options="{"changeTriggerSelectors":[".shipping-method-input"]}" method="post">
                <input type="hidden" name="redirectTo" value="frontend.checkout.confirm.page">
                <input type="hidden" name="redirectParameters" value="{"redirected":0}">
                
                <div class="shipping-methods">
                    {{ parent() }}
                    <div class="shipping-method-message">
                        Hello from ShipperHQ!
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block page_checkout_shipping_method_input_style %}
    <style>
        .shipping-method-message {
            margin-top: 10px;
            padding: 10px;
            background-color: #f8f9fa;
            border-radius: 4px;
        }
    </style>
{% endblock %}
 