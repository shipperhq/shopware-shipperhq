<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="ShipperHQ\WS\Client\WebServiceClient" class="ShipperHQ\WS\Client\WebServiceClient" public="false">
            <tag name="shopware.service"/>
        </service>

        <service id="ShipperHQ\Lib\Helper\Date" class="ShipperHQ\Lib\Helper\Date" public="false">
            <tag name="shopware.service"/>
        </service>

        <service id="ShipperHQ\Lib\Rate\Helper" class="ShipperHQ\Lib\Rate\Helper" public="false">
            <argument type="service" id="ShipperHQ\Lib\Helper\Date"/>
            <tag name="shopware.service"/>
        </service>

        <service id="SHQ\RateProvider\Service\ShippingRateCalculator" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="SHQ\RateProvider\Subscriber\ShippingRateSubscriber">
            <tag name="kernel.event_subscriber"/>
            <argument type="service" id="SHQ\RateProvider\Service\ShippingRateCalculator"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="SHQ\RateProvider\Helper\RestHelper">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <service id="SHQ\RateProvider\Service\ShipperHQApiClient">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="SHQ\RateProvider\Helper\RestHelper"/>
            <argument type="service" id="ShipperHQ\WS\Client\WebServiceClient"/>
            <argument type="service" id="ShipperHQ\Lib\Rate\Helper"/>
        </service>

        <service id="SHQ\RateProvider\Checkout\Cart\OverwritePriceCollector"> 
            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>

            <!-- after product collector/processor -->
            <tag name="shopware.cart.processor" priority="4500" />
            <tag name="shopware.cart.collector" priority="4500" />
        </service>

        <service id="SHQ\RateProvider\Handlers\ShipperHQHandler">
            <argument type="service" id="logger"/>
            <argument type="service" id="SHQ\RateProvider\Service\ShipperHQApiClient"/>
            <argument type="service" id="shipping_method.repository"/>
        </service>

        <service id="SHQ\RateProvider\Controller\Api\ApiConnectorController" public="true">
            <argument type="service" id="logger"/>
            <argument type="service" id="SHQ\RateProvider\Handlers\ShipperHQHandler"/>
            <tag name="controller.service_arguments"/>
        </service>
    </services>
</container>
