<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="../src/Feature/ConfigurationHandler/config/services.xml"/>
    </imports>

    <services>

        <service id="ShipperHQ\WS\Client\WebServiceClient" class="ShipperHQ\WS\Client\WebServiceClient" public="true">
            <tag name="shopware.service"/>
        </service>

        <service id="ShipperHQ\Lib\Helper\Date" class="ShipperHQ\Lib\Helper\Date" public="false">
            <tag name="shopware.service"/>
        </service>

        <service id="ShipperHQ\Lib\Rate\Helper" class="ShipperHQ\Lib\Rate\Helper" public="false">
            <argument type="service" id="ShipperHQ\Lib\Helper\Date"/>
            <tag name="shopware.service"/>
        </service>

        <service id="SHQ\RateProvider\Service\ShippingRateCalculator" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="SHQ\RateProvider\Helper\RestHelper">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <service id="SHQ\RateProvider\Service\ShipperHQApiClient">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="SHQ\RateProvider\Helper\RestHelper"/>
            <argument type="service" id="ShipperHQ\WS\Client\WebServiceClient"/>
            <argument type="service" id="ShipperHQ\Lib\Rate\Helper"/>
            <argument type="service" id="SHQ\RateProvider\Helper\Mapper"/>
        </service>

        <service id="SHQ\RateProvider\Service\ShipperHQBatchRateProvider">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="SHQ\RateProvider\Service\ShipperHQApiClient"/>
            <argument type="service" id="shipping_method.repository"/>
            <argument type="service" id="SHQ\RateProvider\Helper\Mapper"/>
        </service>

        <service id="SHQ\RateProvider\Service\ShippingRateCache">
            <argument type="service" id="session.factory"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="SHQ\RateProvider\Service\ShipperHQBatchRateProvider"/>
            <argument type="service" id="shipping_method.repository"/>
        </service>

        <service id="SHQ\RateProvider\Subscriber\CartEventSubscriber">
            <argument type="service" id="SHQ\RateProvider\Service\ShippingRateCache"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="SHQ\RateProvider\Helper\Mapper">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="product.repository"/>
        </service>

        <service id="SHQ\RateProvider\Subscriber\ShippingMethodLoggerSubscriber">
            <argument type="service" id="logger"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="SHQ\RateProvider\Core\Checkout\Cart\Delivery\DeliveryCalculatorDecorator" decorates="Shopware\Core\Checkout\Cart\Delivery\DeliveryCalculator" public="true">
            <!-- <argument type="service" id=".inner"/> -->
            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
            <!-- <argument type="service" id="Shopware\Core\Checkout\Cart\Tax\PercentageTaxRuleBuilder"/> -->
            <argument type="service" id="logger"/>
            <argument type="service" id="SHQ\RateProvider\Service\ShippingRateCache"/>
            <argument type="service" id="shipping_method.repository"/>
            <tag name="shopware.service"/>
        </service>

        <service id="SHQ\RateProvider\Command\ClearShippingRateCacheCommand">
            <argument type="service" id="SHQ\RateProvider\Service\ShippingRateCache"/>
            <tag name="console.command"/>
        </service>
    </services>
</container>
