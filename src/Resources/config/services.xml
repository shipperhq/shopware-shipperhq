<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="../src/Feature/ConfigurationHandler/config/services.xml"/>
        <import resource="../src/Feature/ProductData/config/services.xml"/>
        <import resource="../src/Feature/Rating/config/services.xml"/>
    </imports>

    <services>
        <service id="ShipperHQ\WS\Client\WebServiceClient" class="ShipperHQ\WS\Client\WebServiceClient" public="true">
            <tag name="shopware.service"/>
        </service>

        <service id="ShipperHQ\Lib\Helper\Date" class="ShipperHQ\Lib\Helper\Date" public="false">
            <tag name="shopware.service"/>
        </service>

        <service id="ShipperHQ\Lib\Rate\Helper" class="ShipperHQ\Lib\Rate\Helper" public="false">
            <argument type="service" id="ShipperHQ\Lib\Helper\Date"/>
            <tag name="shopware.service"/>
        </service>

        <service id="SHQ\RateProvider\Service\ShippingRateCalculator" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="SHQ\RateProvider\Config\ShipperHQClientConfig" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <service id="SHQ\RateProvider\Service\ShipperHQClient" public="true">
            <argument type="service" id="SHQ\RateProvider\Config\ShipperHQClientConfig"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="ShipperHQ\WS\Client\WebServiceClient"/>
            <argument type="service" id="ShipperHQ\Lib\Rate\Helper"/>
            <argument type="service" id="SHQ\RateProvider\Helper\Mapper"/>
        </service>

        <!-- Commenting out OverwritePriceCollector as it appears to be unnecessary -->
        <!--
        <service id="SHQ\RateProvider\Checkout\Cart\OverwritePriceCollector"> 
            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
            <tag name="shopware.cart.processor" priority="4500" />
            <tag name="shopware.cart.collector" priority="4500" />
        </service>
        -->

        <service id="SHQ\RateProvider\Service\ShipperHQBatchRateProvider">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="SHQ\RateProvider\Service\ShipperHQClient"/>
            <argument type="service" id="shipping_method.repository"/>
            <argument type="service" id="SHQ\RateProvider\Helper\Mapper"/>
        </service>

        <service id="SHQ\RateProvider\Service\ShippingRateCache">
            <argument type="service" id="session.factory"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="SHQ\RateProvider\Service\ShipperHQBatchRateProvider"/>
            <argument type="service" id="shipping_method.repository"/>
        </service>

        <!-- Commented out as we're using DeliveryCalculatorDecorator instead -->
        <!--
        <service id="SHQ\RateProvider\Subscriber\BatchShippingRateSubscriber">
            <argument type="service" id="SHQ\RateProvider\Service\ShippingRateCache"/>
            <argument type="service" id="monolog.logger.shipperhq"/>
            <argument type="service" id="shipping_method.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\Tax\PercentageTaxRuleBuilder"/>
            <tag name="kernel.event_subscriber"/>
        </service>
        -->


        <service id="SHQ\RateProvider\Helper\Mapper">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="product.repository"/>
        </service>

        <service id="SHQ\RateProvider\Command\ClearShippingRateCacheCommand">
            <argument type="service" id="SHQ\RateProvider\Service\ShippingRateCache"/>
            <tag name="console.command"/>
        </service>

        <!-- Register ShippingMethodRouteDecorator -->
        <service id="SHQ\RateProvider\Core\Checkout\Shipping\SalesChannel\ShippingMethodRouteDecorator"
                 decorates="Shopware\Core\Checkout\Shipping\SalesChannel\ShippingMethodRoute">
            <argument type="service" id=".inner"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\Delivery\DeliveryCalculator"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\SalesChannel\CartService"/>
        </service>
    </services>
</container>
