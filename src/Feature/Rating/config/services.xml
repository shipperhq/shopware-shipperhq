<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Feature-specific services -->
        <service id="SHQ\RateProvider\Feature\Rating\Subscriber\CartEventSubscriber">
            <argument type="service" id="SHQ\RateProvider\Service\ShippingRateCache"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="SHQ\RateProvider\Feature\Rating\Subscriber\ShippingMethodLoggerSubscriber">
            <argument type="service" id="logger"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="SHQ\RateProvider\Feature\Rating\Decorator\DeliveryCalculatorDecorator" decorates="Shopware\Core\Checkout\Cart\Delivery\DeliveryCalculator" public="true">
            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="SHQ\RateProvider\Service\ShippingRateCache"/>
            <argument type="service" id="shipping_method.repository"/>
            <tag name="shopware.service"/>
        </service>
    </services>
</container>
 