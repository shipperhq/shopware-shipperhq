<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Order Line Item Decorator -->
        <service id="SHQ\RateProvider\Feature\Order\Decorator\OrderLineItemDecorator">
            <tag name="shopware.entity.definition" entity="order_line_item" />
        </service>

        <!-- Order Line Item Subscriber -->
        <service id="SHQ\RateProvider\Feature\Order\Subscriber\OrderLineItemSubscriber">
            <argument type="service" id="monolog.logger"/>
            <argument type="service" id="order.repository"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
 