<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Feature-specific services -->
        <service id="SHQ\RateProvider\Feature\ConfigurationHandler\Service\RefreshShippingMethodsService">
            <argument type="service" id="logger"/>
            <argument type="service" id="SHQ\RateProvider\Service\ShipperHQClient"/>
            <argument type="service" id="shipping_method.repository"/>
            <argument type="service" id="tag.repository"/>
            <argument type="service" id="delivery_time.repository"/>
            <argument type="service" id="rule.repository"/>
            <argument type="service" id="sales_channel.repository"/>
        </service>

        <service id="SHQ\RateProvider\Feature\ConfigurationHandler\UseCase\TestConnectionUseCase">
            <argument type="service" id="SHQ\RateProvider\Feature\ConfigurationHandler\Service\RefreshShippingMethodsService"/>
        </service>

        <service id="SHQ\RateProvider\Feature\ConfigurationHandler\UseCase\RefreshShippingMethodsUseCase">
            <argument type="service" id="SHQ\RateProvider\Feature\ConfigurationHandler\Service\RefreshShippingMethodsService"/>
        </service>

        <service id="SHQ\RateProvider\Feature\ConfigurationHandler\Controller\ApiConnectorController" public="true">
            <argument type="service" id="logger"/>
            <argument type="service" id="SHQ\RateProvider\Feature\ConfigurationHandler\UseCase\TestConnectionUseCase"/>
            <argument type="service" id="SHQ\RateProvider\Feature\ConfigurationHandler\UseCase\RefreshShippingMethodsUseCase"/>
            <tag name="controller.service_arguments"/>
        </service>
    </services>
</container>
